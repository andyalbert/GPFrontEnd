<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="80dp" android:id="@+id/list_item_notification">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        tools:src="@mipmap/ic_profile_original"
        android:id="@+id/list_item_notification_image"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorPrimary"
            android:layout_marginTop="10dp"
            tools:text="this is just testing for the text"
            android:id="@+id/list_item_notification_text"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/list_item_notification_time"
            android:drawableLeft="@drawable/image_time"
            android:gravity="center_vertical"
            tools:text="time"
            android:drawablePadding="3dp"
            />
    </RelativeLayout>
</LinearLayout>