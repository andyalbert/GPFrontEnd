<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="0dp"
    android:id="@+id/home_fragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_home_user_name"
            android:textSize="@dimen/title_size"
            android:text="Andrew"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/fragment_home_user_name"
            android:id="@+id/fragment_home_line"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:layout_marginTop="5dp"
            android:layout_below="@id/fragment_home_line"
            android:id="@+id/fragment_home_friends_text"
            />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/fragment_home_friends_list"
            android:layout_below="@id/fragment_home_friends_text"/>

        <!--
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/fragment_home_friends_list"
            android:layout_below="@id/fragment_home_friends_text"
            android:scrollbars="vertical"
            android:nestedScrollingEnabled="false"
            />
            -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Events"
            android:layout_marginTop="15dp"
            android:visibility="invisible"
            android:layout_below="@id/fragment_home_friends_list"
            android:id="@+id/fragment_home_event_text"
            />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:visibility="invisible"
                android:layout_below="@id/fragment_home_event_text"
                android:id="@+id/fragment_home_events_list"
                />
        <!--
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:layout_below="@id/fragment_home_event_text"
            android:id="@+id/fragment_home_events_list"
            android:scrollbars="vertical"

            />
            -->
    </RelativeLayout>
</ScrollView>
