<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:layout_width="250dp"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:background="@drawable/image_chat"
        android:id="@+id/chat_message_internal_layout"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                tools:text="this is a test"
                android:id="@+id/chat_message_user"
                android:textColor="?android:textColorPrimary"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_gravity="right"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="right"
                android:layout_height="wrap_content"
                tools:text="simple time "
                android:id="@+id/chat_message_time" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="fjlkdsjfkl jdsklfj adskljf klsdj"
            android:layout_marginTop="5dp"
            android:id="@+id/chat_message_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
             />
    </LinearLayout>

</LinearLayout>